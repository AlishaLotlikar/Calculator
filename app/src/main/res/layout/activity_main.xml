<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/dec"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="."
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dec"
        android:layout_alignParentStart="true"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn4"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn1"
        android:layout_alignParentStart="true"
        android:text="4"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:textColor="#fff" />

    <Button
        android:id="@+id/btn7"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn4"
        android:layout_alignParentStart="true"
        android:text="7"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:text="7"
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn0"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/dec"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dec"
        android:layout_toEndOf="@+id/dec"
        android:text="2"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn5"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn1"
        android:layout_toEndOf="@+id/dec"
        android:text="5"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn8"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn4"
        android:layout_toEndOf="@+id/dec"
        android:text="8"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:text="8"
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dec"
        android:layout_toEndOf="@+id/btn0"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn6"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn1"
        android:layout_toEndOf="@+id/btn0"
        android:text="6"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn9"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn4"
        android:layout_toEndOf="@+id/btn0"
        android:text="9"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btndiv"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn7"
        android:layout_alignParentEnd="true"
        android:background="#818181"
        android:gravity="center"
        android:text="/"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnmul"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn7"
        android:layout_toStartOf="@+id/btndiv"
        android:background="#818181"
        android:gravity="center"
        android:text="*"
        android:textSize="35sp" />

    <Button
        android:id="@+id/eq"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn7"
        android:layout_toStartOf="@+id/btnmul"
        android:background="#818181"
        android:gravity="center"
        android:text="="
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnsub"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn7"
        android:layout_toStartOf="@+id/eq"
        android:background="#818181"
        android:gravity="center"
        android:text="-"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnadd"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn7"
        android:layout_toStartOf="@+id/btnsub"
        android:background="#818181"
        android:gravity="center"
        android:text="+"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/res"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@+id/btndiv"
        android:layout_alignParentStart="true"
        android:textAlignment="textEnd"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/op"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="122dp"
        android:textAlignment="textEnd"
        android:textSize="36sp" />

    <Button
        android:id="@+id/clr"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dec"
        android:layout_toEndOf="@+id/btn0"
        android:background="@android:color/holo_red_dark"
        android:text="C"
        android:textColor="@android:color/white"
        android:textSize="30sp" />
</RelativeLayout>